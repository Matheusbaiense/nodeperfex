{
  "name": "n8n-nodes-perfex",
  "version": "1.0.0",
  "description": "Nó n8n para integração com o Perfex CRM através do módulo WON API",
  "keywords": [
    "n8n-community-node-package",
    "perfex",
    "crm",
    "api",
    "won"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Matheusbaiense/n8n-nodes-perfex",
  "author": {
    "name": "Matheus Baiense",
    "email": "matheusbaiense@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matheusbaiense/n8n-nodes-perfex.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PerfexApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Perfex/Perfex.node.js"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n8n-nodes-base": "^1.22.0",
    "gulp": "^4.0.2",
    "n8n-core": "^0.218.0",
    "n8n-workflow": "^0.218.0",
    "prettier": "^3.2.5",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "joi": "^17.12.1",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5"
  }
}
